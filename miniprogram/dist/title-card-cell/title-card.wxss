/* dist/cards/title-card/title-card.wxss */
.wx-cards-title-card {
  margin: 24rpx;
  background-color: #fff;
  border-radius: 30rpx;
  /* box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 2px 1px -1px rgb(16, 34, 83); */
  box-shadow: 5px 5px 10px gainsboro;
  overflow: hidden;
}

.wx-cards-title-card .pc image {
  width: 100%;
}

.wx-cards-title-card .title {
  padding: 25rpx;
  font-size: 48rpx;
  font-weight: bold;
}

.wx-cards-title-card .context {
  padding: 25rpx;
  color: rgba(0, 0, 0, 0.87);
  font-size: 32rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.01071em;
}

.wx-cards-title-card .summary {
  padding: 15rpx;
  color: rgb(122, 121, 121);
  font-size: 25rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.0;
  letter-spacing: 0.01071em;
}

.wx-cards-title-card .buttons {
  display: flex;
  justify-content: space-between;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.wx-cards-title-card .buttons .like {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wx-cards-title-card .buttons .like-number {
  color: #6B6B6B;
  font-size: 28rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 200;
  margin-top: -10rpx;
  margin-left: -10rpx;
  margin-right: 20rpx;
}
.wx-cards-title-card .buttons .gotoAnswer{
  color: rgb(190, 182, 182);
  font-size: 35rpx;
  /* font-family: "Roboto", "Helvetica", "Arial", sans-serif; */
  font-weight: bold;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
  margin-left: -10rpx;
  margin-right: 20rpx;
}
.wx-cards-title-card .buttons .vant-tag{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}