<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
		<text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
			<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
				<!-- <view class="cu-item arrow" wx:for="{{5}}" wx:key="index">
					<view class="content">
						<text class="cuIcon-github text-grey"></text>
						<text class="text-grey">{{index +1}}</text>
					</view>
				</view> -->
        <view class="cu-list grid col-5 no-border margin-top">
          <view class="cu-item" wx:for="{{answer}}" wx:key wx:if="{{index<gridCol*2}}" bindtap="changeQuestion" data-index="{{index}}">
            <view class="cuIcon-form{{item.value!=null?'fill':''}} text-{{index==question_index?'blue':'grey'}}">
              <!-- <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
                <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
              </view> -->
            </view>
            <text>{{index+1}}</text>
          </view>
        </view>
			</view>
</scroll-view>




